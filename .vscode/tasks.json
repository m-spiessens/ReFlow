{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install",
            "type": "shell",
            "command": "conan install . -if build/ -s build_type=Release"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "conan build . -bf build/",
            "group": "build",
            "dependsOn": [
                "Install"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "ExportTest",
            "type": "shell",
            "command": "conan export . spiessensm/testing",
            "dependsOn": [
                "Build"
            ]
        },
        {
            "label": "Coverage Install",
            "type": "shell",
            "command": "conan install . -if coverage/ -s build_type=Debug -o coverage=True --build Flow/2.0@spiessensm/testing",
            "dependsOn": [
                "ExportTest"
            ],
            "options": {
                "cwd": "test_package/"
            }
        },
        {
            "label": "Coverage Build",
            "type": "shell",
            "command": "conan build . -bf coverage/",
            "dependsOn": [
                "Coverage Install"
            ],
            "options": {
                "cwd": "test_package/"
            }
        },
        {
            "label": "Debug Install",
            "type": "shell",
            "command": "conan install . -if debug/ -s build_type=Debug --build Flow/2.0@spiessensm/testing",
            "dependsOn": [
                "ExportTest"
            ],
            "options": {
                "cwd": "test_package/"
            }
        },
        {
            "label": "Debug Build",
            "type": "shell",
            "command": "conan build . -bf debug/",
            "dependsOn": [
                "Debug Install"
            ],
            "options": {
                "cwd": "test_package/"
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "conan test test_package Flow/2.0@spiessensm/testing -s build_type=Release --build Flow/2.0@spiessensm/testing",
            "group": "test",
            "dependsOn": [
                "ExportTest"
            ]
        },
        {
            "label": "Coverage",
            "type": "shell",
            "command": "gcovr test_package/coverage/",
            "group": "test",
            "dependsOn": [
                "Coverage Build"
            ]
        },
        {
            "label": "ExportDev",
            "type": "shell",
            "command": "conan export . spiessensm/dev",
            "group": "test",
            "dependsOn": [
                "Test"
            ]
        },
        {
            "label": "UploadDev",
            "type": "shell",
            "command": "conan upload Flow/2.0@spiessensm/dev --remote=spiessensm",
            "group": "test",
            "dependsOn": [
                "ExportDev"
            ]
        },
        {
            "label": "TM4C Install Debug",
            "type": "shell",
            "command": "conan install example/EK-TM4C129EXL -pr:h TM4C129ENCPDT -if=example/EK-TM4C129EXL-Debug/ -s build_type=Debug --build Flow/2.0@spiessensm/dev",
            "dependsOn": [
                "ExportDev"
            ]
        },
        {
            "label": "TM4C Build Debug",
            "type": "shell",
            "command": "conan build example/EK-TM4C129EXL -bf=example/EK-TM4C129EXL-Debug/",
            "group": "build",
            "dependsOn": [
                "TM4C Install Debug"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "TM4C Install Release",
            "type": "shell",
            "command": "conan install example/EK-TM4C129EXL -pr:h TM4C129ENCPDT -if=example/EK-TM4C129EXL-Release/ -s build_type=Release --build Flow/2.0@spiessensm/dev",
            "dependsOn": [
                "ExportDev"
            ]
        },
        {
            "label": "TM4C Build Release",
            "type": "shell",
            "command": "conan build example/EK-TM4C129EXL -bf=example/EK-TM4C129EXL-Release/",
            "group": "build",
            "dependsOn": [
                "TM4C Install Release"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}