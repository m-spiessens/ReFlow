{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install",
            "type": "shell",
            "command": "conan install . -if build/ -s build_type=Release"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "conan build . -bf build/",
            "group": "build",
            "dependsOn": [
                "Install"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Export",
            "type": "shell",
            "command": "conan export . spiessensm/testing",
            "dependsOn": [
                "Build"
            ]
        },
        {
            "label": "Coverage Install",
            "type": "shell",
            "command": "conan install . -if coverage/ -s build_type=Debug -o coverage=True",
            "dependsOn": [
                "Export"
            ],
            "options": {
                "cwd": "test_package/"
            }
        },
        {
            "label": "Coverage Build",
            "type": "shell",
            "command": "conan build . -bf coverage/",
            "dependsOn": [
                "Coverage Install"
            ],
            "options": {
                "cwd": "test_package/"
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "conan test test_package Flow/2.0@spiessensm/testing -s build_type=Release --build Flow/2.0@spiessensm/testing",
            "group": "test",
            "dependsOn": [
                "Export"
            ]
        },
        {
            "label": "Coverage",
            "type": "shell",
            "command": "gcovr coverage/",
            "group": "test",
            "dependsOn": [
                "Coverage Build"
            ]
        }
    ]
}